<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:aop="http://www.springframework.org/schema/aop"
	xmlns:tx="http://www.springframework.org/schema/tx" xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
              	           http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
			   http://www.springframework.org/schema/aop 
			   http://www.springframework.org/schema/aop/spring-aop-3.1.xsd
                           http://www.springframework.org/schema/tx 
                           http://www.springframework.org/schema/tx/spring-tx-3.1.xsd
                           http://www.springframework.org/schema/context 
                           http://www.springframework.org/schema/context/spring-context-3.1.xsd">
	<bean id="InvbalancesHighlightJobClass" class="mro.quartz.job.InvbalancesHighlightJob" />
	<bean id="ItemSitePrCloseJobClass" class="mro.quartz.job.ItemSitePrCloseJob" />
	<bean id="ItemTransferJobClass" class="mro.quartz.job.ItemTransferJob" />
	
	<!-- MAIL -->
	<bean id="MailALT9JobClass" class="mro.quartz.job.MailALT9Job" />
	<bean id="MailALT10JobClass" class="mro.quartz.job.MailALT10Job" />
	<bean id="MailALT11JobClass" class="mro.quartz.job.MailALT11Job" />
	<bean id="MailALT12JobClass" class="mro.quartz.job.MailALT12Job" />
	<bean id="MailALT16JobClass" class="mro.quartz.job.MailALT16Job" />
	<bean id="MailALT19JobClass" class="mro.quartz.job.MailALT19Job" />

	<bean id="ItemSitePrCloseJob"
		class="org.springframework.scheduling.quartz.MethodInvokingJobDetailFactoryBean">
		<property name="targetObject" ref="ItemSitePrCloseJobClass" />
		<property name="targetMethod" value="start" />
		<property name="concurrent" value="false" />
	</bean>
	<bean id="InvbalancesHighlightJob"
		class="org.springframework.scheduling.quartz.MethodInvokingJobDetailFactoryBean">
		<property name="targetObject" ref="InvbalancesHighlightJobClass" />
		<property name="targetMethod" value="start" />
		<property name="concurrent" value="false" />
	</bean>
	<bean id="ItemTransferJob"
		class="org.springframework.scheduling.quartz.MethodInvokingJobDetailFactoryBean">
		<property name="targetObject" ref="ItemTransferJobClass" />
		<property name="targetMethod" value="start" />
		<property name="concurrent" value="false" />
	</bean>
	
	<!-- MAIL -->
	<bean id="MailALT9Job"
		class="org.springframework.scheduling.quartz.MethodInvokingJobDetailFactoryBean">
		<property name="targetObject" ref="MailALT9JobClass" />
		<property name="targetMethod" value="start" />
		<property name="concurrent" value="false" />
	</bean>
	<bean id="MailALT10Job"
		class="org.springframework.scheduling.quartz.MethodInvokingJobDetailFactoryBean">
		<property name="targetObject" ref="MailALT10JobClass" />
		<property name="targetMethod" value="start" />
		<property name="concurrent" value="false" />
	</bean>
	<bean id="MailALT11Job"
		class="org.springframework.scheduling.quartz.MethodInvokingJobDetailFactoryBean">
		<property name="targetObject" ref="MailALT11JobClass" />
		<property name="targetMethod" value="start" />
		<property name="concurrent" value="false" />
	</bean>
	<bean id="MailALT12Job"
		class="org.springframework.scheduling.quartz.MethodInvokingJobDetailFactoryBean">
		<property name="targetObject" ref="MailALT12JobClass" />
		<property name="targetMethod" value="start" />
		<property name="concurrent" value="false" />
	</bean>
	<bean id="MailALT16Job"
		class="org.springframework.scheduling.quartz.MethodInvokingJobDetailFactoryBean">
		<property name="targetObject" ref="MailALT16JobClass" />
		<property name="targetMethod" value="start" />
		<property name="concurrent" value="false" />
	</bean>
	<bean id="MailALT19Job"
		class="org.springframework.scheduling.quartz.MethodInvokingJobDetailFactoryBean">
		<property name="targetObject" ref="MailALT19JobClass" />
		<property name="targetMethod" value="start" />
		<property name="concurrent" value="false" />
	</bean>

<!-- TIME -->
	<bean id="cInvbalancesHighlightJob" class="org.springframework.scheduling.quartz.CronTriggerBean">
		<property name="jobDetail" ref="InvbalancesHighlightJob" />
		<property name="cronExpression" value="0 0 7 1/1 * ? *" />
	</bean>
	<bean id="cItemSitePrCloseJob" class="org.springframework.scheduling.quartz.CronTriggerBean">
		<property name="jobDetail" ref="ItemSitePrCloseJob" />
		<property name="cronExpression" value="0 0 7 1/1 * ? *" />
	</bean>
	<bean id="cItemTransferJob" class="org.springframework.scheduling.quartz.CronTriggerBean">
		<property name="jobDetail" ref="ItemTransferJob" />
		<property name="cronExpression" value="0 10 10,13,17,19,22 * * ?" />
	</bean>
	
	<!-- MAIL -->
	<bean id="cMailALT9Job" class="org.springframework.scheduling.quartz.CronTriggerBean">
		<property name="jobDetail" ref="MailALT9Job" />
		<property name="cronExpression" value="0 10 9,13 * * ?" />
	</bean>
	<bean id="cMailALT10Job" class="org.springframework.scheduling.quartz.CronTriggerBean">
		<property name="jobDetail" ref="MailALT10Job" />
		<property name="cronExpression" value="0 0 8 1/1 * ? *" />
	</bean>
	<bean id="cMailALT11Job" class="org.springframework.scheduling.quartz.CronTriggerBean">
		<property name="jobDetail" ref="MailALT11Job" />
		<property name="cronExpression" value="0 0 8 1/1 * ? *" />
	</bean>
	<bean id="cMailALT12Job" class="org.springframework.scheduling.quartz.CronTriggerBean">
		<property name="jobDetail" ref="MailALT12Job" />
		<property name="cronExpression" value="0 20 10,13,16,19 * * ?" />
	</bean>
	<bean id="cMailALT16Job" class="org.springframework.scheduling.quartz.CronTriggerBean">
		<property name="jobDetail" ref="MailALT16Job" />
		<property name="cronExpression" value="0 0 8 1/1 * ? *" />
	</bean>
	<bean id="cMailALT19Job" class="org.springframework.scheduling.quartz.CronTriggerBean">
		<property name="jobDetail" ref="MailALT19Job" />
		<property name="cronExpression" value="0 0 8 1/1 * ? *" />
	</bean>

	<bean id="schedulerFactoryBean"
		class="org.springframework.scheduling.quartz.SchedulerFactoryBean">
		<property name="triggers">
			<list>
				<ref bean="cInvbalancesHighlightJob" /><!--20170504 start-->
				<ref bean="cItemSitePrCloseJob" /><!--20170816 start-->
				<ref bean="cItemTransferJob" />
				<ref bean="cMailALT9Job" /><!--MRO代理人待簽核通知-->
				<ref bean="cMailALT10Job" /><!--MRO 控管量 Monitor 異常通知 20170504 start-->
				<ref bean="cMailALT11Job" /><!--MRO 通知：控管量Monitor下修清單 20170504 start-->
				<ref bean="cMailALT12Job" /><!--SAP程式更新失敗通知!!-->
				<ref bean="cMailALT16Job" /><!--R1非週期入料之庫存 Monitor 機制通知 20170518 start-->
				<ref bean="cMailALT19Job" /><!--料號凍結生效&需求部門之控管量系統自動歸零通知-->
			</list>
		</property>
	</bean>
</beans> 